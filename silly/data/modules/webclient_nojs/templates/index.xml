<?xml version="1.0" encoding="UTF-8"?>
<root>
    <record model="template" xmlid="template_render_view_list">
        <field name="xml" t="str">
            <template t-strip-text=" &#10;">
                <t t-call="template_html_base">
                    <t t-set="lang">en-US</t>
                    <t t-set="title">webclient2:tm:</t>
                    <t t-set="head">
                        <style>
                            table, th, td {
                                border: 1px solid black;
                                border-collapse: collapse;
                            }
                        </style>
                    </t>
                    <t t-set="body">
                        <t t-raw="f&quot;{pagination['offset_start']}-{pagination['offset_end']} of {pagination['total_records']}&quot;"/>
                        <table>
                            <t t-set="has_form_view" t-value="'form_view_id' in view"/>
                            <tr>
                                <t t-foreach="fields" t-as="field">
                                    <th t-raw="field['name']"/>
                                </t>
                                <th t-if="has_form_view"/>
                            </tr>
                            <t t-foreach="rows" t-as="row">
                                <tr>
                                    <t t-foreach="fields" t-as="field">
                                        <td t-raw="row[field['field']]"/>
                                    </t>
                                    <td t-if="has_form_view">
                                        <a t-att-href="f&quot;/webclient2/view/{view['form_view_id']}?id={row['id']}&quot;">form</a>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </t>
                </t>
            </template>
        </field>
    </record>

    <record model="template" xmlid="template_render_view_form">
        <field name="xml" t="str">
            <template t-strip-text=" &#10;">
                <t t-call="template_html_base">
                    <t t-set="lang">en-US</t>
                    <t t-set="title">webclient2:tm:</t>
                    <t t-set="head"/>
                    <t t-set="body">
                        <t t-foreach="fields" t-as="field">
                            <label t-att-for="'TODO'"><t t-raw="field['name']"/></label><br/>
                            <textarea t-att-name="'TODO'" type="text"><t t-raw="data[field['field']]"/></textarea>
                        </t>
                    </t>
                </t>
            </template>
        </field>
    </record>
</root>
