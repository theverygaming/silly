                <field widget="str" name="xmlid"/>
                <label for="model_name">Model Name</label>
                <field widget="str" name="model_name"/>
                <div>
                    <p>This field shall be inside a div</p>
                    <!--
                    # TODO: we can't do int fields yet because we are missing type conversion
                    <label for="model_id">Model ID</label>
                    <field name="model_id"/>
                    -->
                    <label for="id">ID</label>
                    <field widget="str" name="id"/>
                </div>
                <p>This is some random ass HTML!</p>
            </main>
        </field>
    </record>
</root>
